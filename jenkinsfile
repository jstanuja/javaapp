jenkinsfile (declarative pipeline)

pipeline {
	agent any
	stages {
		stage ('Build'){
			steps {
			sh 'mvn compile'
				}
			}
		stage('Test'){
                        steps {
                        sh 'mvn test package'
                                }
                        }
		 stage ('Deploy'){
                        steps {
                        sh './deploy tomcat'
                                }
                        }
		}
	}


